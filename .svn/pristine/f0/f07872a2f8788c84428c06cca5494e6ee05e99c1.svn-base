<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_history_order_jump"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:context="com.quickcanteen.activity.historyorder.HistoryOrder">
    <android.support.v7.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorPrimary"
            android:theme="?attr/actionBarTheme"
            android:minHeight="?attr/actionBarSize"
            android:id="@+id/orderListToolbar"/>
    <ProgressBar
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/orderListToolbar"
            android:layout_centerHorizontal="true"
            android:visibility="gone"
            android:id="@+id/orderListProgressBar"/>

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/color_background_light_pink"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" android:weightSum="1"
            android:layout_above="@+id/bottom_toolbar"
            android:layout_below="@+id/orderListProgressBar">
        <com.quickcanteen.activity.PullToRefreshLayout
                android:id="@+id/refreshable_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >
        <ListView
                android:layout_marginTop="@dimen/page_margin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:divider="#00000000"
                android:dividerHeight="15dp"
                android:layout_above="@+id/fullscreen_content_controls"
                android:id="@+id/historyOrderList"/>
        </com.quickcanteen.activity.PullToRefreshLayout>
        <TextView
                android:text="您还没有任何订单"
                android:textColor="@color/color_history_order_none_attention"
                android:textSize="@dimen/text_size_primary"
                android:paddingTop="@dimen/text_top_margin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:id="@+id/noneOrderAttention"
                android:textAlignment="center"/>
    </LinearLayout>

</RelativeLayout>
