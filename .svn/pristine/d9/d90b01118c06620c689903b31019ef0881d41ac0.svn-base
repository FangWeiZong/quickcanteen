<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent">

    <TextView
            android:text="dish_name" android:textColor="@color/color_text_black"
            android:layout_height="35dp" android:id="@+id/dishName" android:layout_weight="0.48"
            android:textSize="20sp" android:textAlignment="center" android:layout_width="154dp"/>
    <TextView
            android:text="dish_quantity" android:textColor="@color/color_text_black"
            android:layout_height="35dp" android:id="@+id/dishQuantity"
            android:textSize="20sp" android:textAlignment="center" android:layout_width="100dp"/>
    <TextView
            android:text="dish_price" android:textColor="@color/color_text_black"
            android:layout_height="35dp" android:id="@+id/dishPrice" android:layout_weight="1.88"
            android:textSize="20sp" android:textAlignment="center" android:layout_width="100dp"/>

</LinearLayout>