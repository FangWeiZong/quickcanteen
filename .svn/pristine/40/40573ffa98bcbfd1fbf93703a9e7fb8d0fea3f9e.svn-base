<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:padding="10dp"
            app:srcCompat="@drawable/nopic"
            android:id="@+id/searchPic"
            />
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:layout_weight="1">
        <TextView
                android:text="商家名称"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="5dp"
                android:layout_marginBottom="10dp"
                android:id="@+id/searchCompany"
                android:textSize="@dimen/text_size_primary" android:textStyle="normal|bold"
                android:textColor="@color/color_text_black"/>
        <RatingBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginBottom="10dp"
                android:id="@+id/searchRating"
                style="@style/Widget.AppCompat.RatingBar.Small" android:numStars="5" android:rating="1"/>
        <TextView
                android:text="可配送"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginBottom="12dp"
                android:id="@+id/companyInfo"
                android:textSize="14sp" android:textColor="@color/color_dishes_introduction_none_assess"/>
        <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="5dp"
                android:layout_marginBottom="12dp"
                app:srcCompat="@color/color_divider_line"
                android:id="@+id/divider"/>
        <ListView
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/searchDishesList"/>
    </LinearLayout>
</LinearLayout>
