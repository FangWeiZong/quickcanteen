<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:background="@drawable/style_history_order"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:descendantFocusability="blocksDescendants"
              >

    <ImageView
            android:layout_height="32dp"
            android:layout_width="32dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="@dimen/page_margin"
            android:id="@+id/orderImg"
            android:background="@drawable/company_img"
            android:focusable="false"
            />
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/page_margin">
            <TextView
                    android:text="食堂名称"
                    android:paddingTop="@dimen/text_top_margin"
                    android:paddingBottom="@dimen/text_bottom_margin"
                    android:focusable="false"
                    android:textSize="@dimen/text_size_history_order_company"
                    android:textColor="@color/color_text_black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/orderCompany"/>
            <TextView
                    android:text="订单状态"
                    android:textSize="@dimen/text_size_history_order_state"
                    android:textColor="@color/color_text_black"
                    android:paddingTop="@dimen/text_top_margin"
                    android:paddingBottom="@dimen/text_bottom_margin"
                    android:focusable="false"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/orderState"
                    android:textAlignment="textEnd"/>
        </LinearLayout>
        <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginRight="@dimen/page_margin"
                android:focusable="false"
                android:id="@+id/line"
                android:background="@color/color_history_order_line"/>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/page_margin"
                android:paddingTop="@dimen/text_top_margin"
                android:paddingBottom="@dimen/text_bottom_margin">
            <TextView
                    android:text="菜品名称（等）"
                    android:textSize="@dimen/text_size_primary"
                    android:textColor="@color/color_text_black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:focusable="false"
                    android:id="@+id/orderName"
                    android:textStyle="normal|bold"/>

            <TextView
                    android:text="订单总价"
                    android:textSize="@dimen/text_size_primary"
                    android:textColor="@color/color_history_order_price"
                    android:focusable="false"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/orderPrice"
                    android:textStyle="normal|bold" android:textAlignment="textEnd"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/page_margin"
                android:paddingTop="@dimen/text_top_margin"
                android:paddingBottom="@dimen/text_bottom_margin">
            <Space
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:focusable="false"
                    android:layout_weight="1"/>
            <Button
                    android:text="我要评价"
                    android:textSize="18sp"
                    android:textColor="@color/colorPrimary"
                    android:focusable="false"
                    android:clickable="true"
                    android:padding="2dp"
                    android:layout_marginRight="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:id="@+id/assessOrder"
                    android:background="@drawable/button_border3"/>
            <Button
                    android:text="再来一单"
                    android:textSize="18sp"
                    android:textColor="@color/colorPrimary"
                    android:focusable="false"
                    android:clickable="true"
                    android:padding="2dp"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:id="@+id/addOrder"
                    android:background="@drawable/button_border3"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
