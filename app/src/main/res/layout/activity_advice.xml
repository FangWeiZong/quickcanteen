<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_advice"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:context="com.quickcanteen.activity.advice.Advice">
    <include layout="@layout/top_toolbar"
             android:id="@+id/top_toolbar"/>

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@color/color_background_light_pink"
            android:layout_below="@+id/top_toolbar">
        <EditText
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:layout_margin="@dimen/page_margin"
                android:paddingTop="@dimen/text_top_margin"
                android:paddingLeft="@dimen/text_left_margin"
                android:paddingRight="@dimen/text_right_margin"
                android:paddingBottom="@dimen/text_bottom_margin"
                android:background="@color/color_background_white"
                android:inputType="textMultiLine"
                android:hint="您觉得我们还有什么可以改进的，请留下您的宝贵意见(*＾-＾*)"
                android:textColorHint="@color/color_text_hint"
                android:textSize="@dimen/text_size_primary"
                android:textColor="@color/color_text_black"
                android:gravity="left"
                android:ems="10"
                android:id="@+id/userAdvice"/>
        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/page_margin"
                android:layout_marginRight="@dimen/page_margin"
                android:layout_marginBottom="@dimen/page_margin"
                android:paddingTop="@dimen/text_top_margin"
                android:paddingLeft="@dimen/text_left_margin"
                android:paddingRight="@dimen/text_right_margin"
                android:paddingBottom="@dimen/text_bottom_margin"
                android:background="@color/color_background_white"
                android:inputType="phone"
                android:hint="请留下您的手机号，以便我们联系您。"
                android:textColorHint="@color/color_text_hint"
                android:textSize="@dimen/text_size_primary"
                android:textColor="@color/color_text_black"
                android:gravity="left"
                android:ems="10"
                android:id="@+id/userPhone"/>
        <Button
                android:text="@string/submit"
                android:layout_marginLeft="@dimen/page_margin"
                android:layout_marginRight="@dimen/page_margin"
                android:textSize="@dimen/text_size_button_primary"
                android:textColor="@color/color_text_black"
                android:layout_gravity="right"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:id="@+id/submit"
                android:background="@drawable/button_border1"/>
    </LinearLayout>
</RelativeLayout>
