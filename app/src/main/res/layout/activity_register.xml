<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_register_page"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:context="com.quickcanteen.quickcanteen.activities.register.RegisterActivity">
    <include layout="@layout/top_toolbar"
             android:id="@+id/top_toolbar"/>
    <ProgressBar
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/top_toolbar"
            android:id="@+id/progressBar"/>
    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/top_toolbar"
            android:background="@color/color_background_light_pink">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true" android:layout_alignParentStart="true"
                android:background="@color/color_background_light_pink" android:weightSum="1">
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:background="@color/color_background_white"
                    android:id="@+id/userInformation">
                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    <TextView
                            android:text="@string/user_name"
                            android:textColor="@color/color_text_black"
                            android:textSize="@dimen/text_size_primary"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:paddingLeft="@dimen/text_left_margin"
                            android:paddingTop="@dimen/text_top_margin"
                            android:paddingBottom="@dimen/text_bottom_margin"
                            android:paddingRight="@dimen/text_right_margin"
                            android:id="@+id/userName"/>
                    <EditText
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:inputType="textPersonName"
                            android:ems="10"
                            android:paddingLeft="@dimen/text_left_margin"
                            android:id="@+id/registerName"
                            android:layout_weight="1"
                            android:selectAllOnFocus="false"
                            android:singleLine="true"
                            android:textSize="18sp"/>
                </LinearLayout>
                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    <TextView
                            android:text="@string/user_id"
                            android:textColor="@color/color_text_black"
                            android:textSize="@dimen/text_size_primary"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:paddingLeft="@dimen/text_left_margin"
                            android:paddingTop="@dimen/text_top_margin"
                            android:paddingBottom="@dimen/text_bottom_margin"
                            android:paddingRight="@dimen/text_right_margin"
                            android:id="@+id/id"/>
                    <EditText
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:inputType="number"
                            android:paddingLeft="@dimen/text_left_margin"
                            android:ems="10"
                            android:id="@+id/registerID"
                            android:layout_weight="1"/>
                </LinearLayout>
                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="42dp">
                    <TextView
                            android:text="@string/user_telephone"
                            android:textColor="@color/color_text_black"
                            android:textSize="@dimen/text_size_primary"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:paddingLeft="@dimen/text_left_margin"
                            android:paddingTop="@dimen/text_top_margin"
                            android:paddingBottom="@dimen/text_bottom_margin"
                            android:paddingRight="@dimen/text_right_margin"
                            android:id="@+id/telNumber"
                    />
                    <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textEmailAddress"
                            android:paddingLeft="@dimen/text_left_margin"
                            android:ems="10"
                            android:id="@+id/registerTelephone"
                    />
                </LinearLayout>
                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    <TextView
                            android:text="@string/identifying_number"
                            android:textColor="@color/color_text_black"
                            android:textSize="@dimen/text_size_primary"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:paddingLeft="@dimen/text_left_margin"
                            android:paddingTop="@dimen/text_top_margin"
                            android:paddingBottom="@dimen/text_bottom_margin"
                            android:paddingRight="@dimen/text_right_margin"
                            android:id="@+id/identify"/>
                    <EditText
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:inputType="number"
                            android:paddingLeft="@dimen/text_left_margin"
                            android:ems="10"
                            android:id="@+id/registerIdentify"
                            android:layout_weight="1"/>
                    <Button
                            android:text="@string/send_identifying_number"
                            android:textColor="@color/color_text_black"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/buttonSendNumber"
                            android:backgroundTint="?attr/colorPrimary"/>
                </LinearLayout>
                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    <TextView
                            android:text="@string/set_password"
                            android:textColor="@color/color_text_black"
                            android:textSize="@dimen/text_size_primary"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:paddingLeft="@dimen/text_left_margin"
                            android:paddingTop="@dimen/text_top_margin"
                            android:paddingBottom="@dimen/text_bottom_margin"
                            android:paddingRight="@dimen/text_right_margin"
                            android:id="@+id/setPassword"/>
                    <EditText
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="@dimen/text_left_margin"
                            android:ems="10"
                            android:id="@+id/registerPassword"
                            android:layout_weight="1"
                            android:inputType="textPassword" android:hint="请输入6~18位密码"/>
                </LinearLayout>
                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    <TextView
                            android:text="@string/confirm_password"
                            android:textColor="@color/color_text_black"
                            android:textSize="@dimen/text_size_primary"
                            android:layout_width="140dp"
                            android:layout_height="wrap_content"
                            android:paddingLeft="@dimen/text_left_margin"
                            android:paddingTop="@dimen/text_top_margin"
                            android:paddingBottom="@dimen/text_bottom_margin"
                            android:paddingRight="@dimen/text_right_margin"/>
                    <EditText
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="@dimen/text_left_margin"
                            android:ems="10"
                            android:id="@+id/registerPasswordAgain"
                            android:layout_weight="1"
                            android:inputType="textPassword"/>
                </LinearLayout>
            </LinearLayout>
            <Button
                    android:text="@string/submit"
                    android:textSize="24sp"
                    android:textColor="@color/color_text_black"
                    android:layout_width="357dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/registerButton"
                    android:layout_marginLeft="@dimen/text_left_margin"
                    android:layout_marginRight="@dimen/text_right_margin"
                    android:layout_gravity="center"
                    android:backgroundTint="@color/colorPrimary"/>
            <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_marginTop="0dp"
                    app:srcCompat="@drawable/food"
                    android:id="@+id/imgFood2"/>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
